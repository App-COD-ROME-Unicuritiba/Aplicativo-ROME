<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context=".TelaTutorial">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="20dp"
          android:layout_gravity="center"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:contentDescription="icon"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/titulosobre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_gravity="center"
            android:text="Tutoriais"
            android:theme="@style/titulos" />
      </LinearLayout>

      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <TableRow
            android:layout_margin="5dp">

          <TextView
              android:theme="@style/textogrande"
              android:text="Tutorial 1"
              android:layout_weight="1"/>

          <TextView
              android:theme="@style/textogrande"
              android:text="Tutorial 2"
              android:layout_weight="1"/>

          <TextView
              android:layout_weight="1"
              android:theme="@style/textogrande"
              android:text="Tutorial 3"/>

        </TableRow>
        <TableRow
            android:layout_margin="5dp">
          <ImageView
              android:id="@+id/imageTutorial1"
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/basemontadacort"/>

          <ImageView
              android:id="@+id/imageTutorial2"
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/foto1"/>
          <ImageView
              android:id="@+id/imageTutorial3"
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/basemontadacort"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp">

          <Button
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:theme="@style/botaorosa"
              android:text="Tutorial 1"
              android:layout_marginHorizontal="5dp"
              android:textColor="@color/white"
              android:layout_weight="1"
              />

          <Button
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:theme="@style/botaorosa"
              android:text="Tutorial 2"
              android:layout_marginHorizontal="5dp"
              android:textColor="@color/white"
              android:layout_weight="1"
              />

          <Button
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:theme="@style/botaorosa"
              android:text="Tutorial 3"
              android:textColor="@color/white"
              android:layout_marginHorizontal="5dp"
              android:layout_weight="1"
              />

        </TableRow>
      </TableLayout>
      <Button
          android:id="@+id/buttoninicio"
          android:text="Voltar"
          android:theme="@style/botaorosa"
          android:textColor="@color/white"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_width="200dp"/>


    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>